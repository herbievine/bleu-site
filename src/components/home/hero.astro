---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="w-full px-6 py-40 md:py-60 flex flex-col items-center space-y-6">
  <h1 class="font-bold text-3xl md:text-5xl max-w-2xl text-center">
    {t('home.title')}
  </h1>
  <p class="text-slate-600 text-center font-medium max-w-lg">
    {t('home.subtitle')}
  </p>
  <a
    href="https://cal.com/herbievine/30min"
    class="w-fit px-4 py-2 bg-slate-800 hover:bg-slate-900 transition-colors duration-200 text-white font-semibold"
  >
    {t('pricing.cta.book')}
  </a>
  <div class="flex space-x-3 items-center">
    <span class="relative flex h-3 w-3">
      <span
        class="animate-ping absolute inline-flex h-full w-full rounded-full bg-orange-400 opacity-75"
      ></span>
      <span class="relative inline-flex rounded-full h-3 w-3 bg-orange-400"></span>
    </span>
    <span class="text-sm font-semibold text-neutral-700 flex items-center space-x-1">
      2 {t('home.slots')}
    </span>
  </div>
</section>
