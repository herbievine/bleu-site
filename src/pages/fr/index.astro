---
import Base from '../../layouts/base.astro';
import Header from '../../components/header.astro';
import Footer from '../../components/footer.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Base
  title="L'agence web pour les marques modernes"
  description="Poivre est une agence de développement web moderne, spécialisée en React et TailwindCSS. Nous proposons des services d'abonnement fluides pour les startups SaaS et les entreprises recherchant des solutions d'interface utilisateur évolutives et élégantes. Simplifiez votre frontend dès aujourd'hui."
  image="/static/media-fr.png"
>
  <Header />
  <div class="py-6 flex flex-col items-start">
    <section class="w-full px-6 py-40 md:py-60 flex flex-col items-center space-y-6">
      <h1 class="font-bold text-3xl md:text-5xl max-w-2xl text-center">
        {t('home.title')}
      </h1>
      <p class="text-slate-600 text-center font-medium max-w-md">
        {t('home.subtitle')}
      </p>
    </section>

    <section
      id="section-dark"
      class="w-full px-6 py-40 md:py-60 flex flex-col items-center space-y-6 bg-slate-950"
    >
      <h2
        id="benefits"
        class="text-slate-200 font-bold text-3xl md:text-5xl max-w-2xl text-center scroll-mt-40"
      >
        <a href="#benefits">{t('home.benefits-title')}</a>
      </h2>
      <p class="text-slate-400 text-center font-medium max-w-lg md:max-w-xl">
        {t('home.benefits-subtitle')}
      </p>
      <ul
        class="pt-12 w-full max-w-5xl grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 md:gap-x-20 md:gap-y-12"
      >
        <li class="flex flex-col space-y-2 items-center">
          <img src="/svgs/zap.svg" alt="Lightning icon" class="w-6 md:w-8 h-6 md:h-8" />
          <span class="text-slate-200 text-center">
            {t('home.benefits-delivery')}
          </span>
        </li>
        <li class="flex flex-col space-y-2 items-center">
          <img src="/svgs/boxes.svg" alt="Solution icon" class="w-6 md:w-8 h-6 md:h-8" />
          <span class="text-slate-200 text-center">
            {t('home.benefits-tailored')}
          </span>
        </li>
        <li class="flex flex-col space-y-2 items-center">
          <img src="/svgs/euro.svg" alt="Euro icon" class="w-6 md:w-8 h-6 md:h-8" />
          <span class="text-slate-200 text-center">
            {t('home.benefits-rate')}
          </span>
        </li>
        <li class="flex flex-col space-y-2 items-center">
          <img src="/svgs/star.svg" alt="Star icon" class="w-6 md:w-8 h-6 md:h-8" />
          <span class="text-slate-200 text-center">
            {t('home.benefits-quality')}
          </span>
        </li>
        <li class="flex flex-col space-y-2 items-center">
          <img src="/svgs/shield.svg" alt="Shield icon" class="w-6 md:w-8 h-6 md:h-8" />
          <span class="text-slate-200 text-center">
            {t('home.benefits-guarantee')}
          </span>
        </li>
        <li class="flex flex-col space-y-2 items-center">
          <img src="/svgs/handshake.svg" alt="Handshake icon" class="w-6 md:w-8 h-6 md:h-8" />
          <span class="text-slate-200 text-center">
            {t('home.benefits-partnership')}
          </span>
        </li>
      </ul>
    </section>
    <section
      class="w-full max-w-7xl mx-auto px-6 py-40 md:py-60 flex flex-col items-center space-y-6"
    >
      <h2 id="pricing" class="font-bold text-3xl md:text-5xl text-center scroll-mt-40">
        <a href="#pricing">{t('pricing.title')}</a>
      </h2>
      <p class="text-slate-600 text-center font-medium max-w-lg md:max-w-xl">
        {t('pricing.subtitle')}
      </p>
      <div class="py-12 w-full grid grid-cols-1 lg:grid-cols-3 gap-20">
        {/* One-off consultations */}
        <div class="flex flex-col space-y-6">
          <span class="text-xl font-semibold">{t('pricing.oneoff.title')}</span>
          <span class="font-medium underline">{t('pricing.oneoff.price')}</span>
          <span>{t('pricing.oneoff.description')}</span>
          <div class="flex flex-col space-y-2">
            <span class="font-medium">{t('pricing.oneoff.coverage')}</span>
            <ul class="flex flex-col space-y-1">
              <li class="flex items-center space-x-2">
                <img src="/svgs/check.svg" alt="Check icon" class="w-5 h-5" />
                <span>{t('pricing.oneoff.backend')}</span>
              </li>
              <li class="flex items-center space-x-2">
                <img src="/svgs/check.svg" alt="Check icon" class="w-5 h-5" />
                <span>{t('pricing.oneoff.frontend')}</span>
              </li>
              <li class="flex items-center space-x-2">
                <img src="/svgs/check.svg" alt="Check icon" class="w-5 h-5" />
                <span>{t('pricing.oneoff.performance')}</span>
              </li>
              <li class="flex items-center space-x-2">
                <img src="/svgs/check.svg" alt="Check icon" class="w-5 h-5" />
                <span>{t('pricing.oneoff.scalability')}</span>
              </li>
              <li class="flex items-center space-x-2">
                <img src="/svgs/check.svg" alt="Check icon" class="w-5 h-5" />
                <span>{t('pricing.oneoff.typescript')}</span>
              </li>
            </ul>
          </div>
          <a
            href="https://cal.com/herbievine/30min"
            class="w-fit px-4 py-2 bg-slate-800 hover:bg-slate-900 transition-colors duration-200 text-white font-semibold"
          >
            {t('pricing.cta.book')}
          </a>
        </div>

        {/* Collaboration */}
        <div class="flex flex-col space-y-6">
          <span class="text-xl font-semibold">{t('pricing.collab.title')}</span>
          <span class="font-medium underline">{t('pricing.collab.price')}</span>
          <span>{t('pricing.collab.description')}</span>
          <div class="flex flex-col space-y-2">
            <span class="font-medium">{t('pricing.collab.included')}</span>
            <ul class="flex flex-col space-y-1">
              <li class="flex items-center space-x-2">
                <img src="/svgs/check.svg" alt="Check icon" class="w-5 h-5" />
                <span>{t('pricing.collab.turnaround')}</span>
              </li>
              <li class="flex items-center space-x-2">
                <img src="/svgs/check.svg" alt="Check icon" class="w-5 h-5" />
                <span>{t('pricing.collab.requests')}</span>
              </li>
              <li class="flex items-center space-x-2">
                <img src="/svgs/check.svg" alt="Check icon" class="w-5 h-5" />
                <span>{t('pricing.collab.revisions')}</span>
              </li>
              <li class="flex items-center space-x-2">
                <img src="/svgs/check.svg" alt="Check icon" class="w-5 h-5" />
                <span>{t('pricing.collab.code')}</span>
              </li>
              <li class="flex items-center space-x-2">
                <img src="/svgs/check.svg" alt="Check icon" class="w-5 h-5" />
                <span>{t('pricing.collab.slack')}</span>
              </li>
            </ul>
          </div>
          <a
            href="https://cal.com/herbievine/30min"
            class="w-fit px-4 py-2 bg-slate-800 hover:bg-slate-900 transition-colors duration-200 text-white font-semibold"
          >
            {t('pricing.cta.book')}
          </a>
        </div>

        {/* Partnership */}
        <div class="flex flex-col space-y-6">
          <span class="text-xl font-semibold">{t('pricing.partner.title')}</span>
          <span class="font-medium underline">{t('pricing.partner.price')}</span>
          <span>{t('pricing.partner.description')}</span>
          <div class="flex flex-col space-y-2">
            <span class="font-medium">{t('pricing.partner.included')}</span>
            <ul class="flex flex-col space-y-1">
              <li class="flex items-center space-x-2">
                <img src="/svgs/check.svg" alt="Check icon" class="w-5 h-5" />
                <span>{t('pricing.partner.everything')}</span>
              </li>
              <li class="flex items-center space-x-2">
                <img src="/svgs/check.svg" alt="Check icon" class="w-5 h-5" />
                <span>{t('pricing.partner.turnaround')}</span>
              </li>
              <li class="flex items-center space-x-2">
                <img src="/svgs/check.svg" alt="Check icon" class="w-5 h-5" />
                <span>{t('pricing.partner.requests')}</span>
              </li>
              <li class="flex items-center space-x-2">
                <img src="/svgs/check.svg" alt="Check icon" class="w-5 h-5" />
                <span>{t('pricing.partner.meetings')}</span>
              </li>
              <li class="flex items-center space-x-2">
                <img src="/svgs/check.svg" alt="Check icon" class="w-5 h-5" />
                <span>{t('pricing.partner.sync')}</span>
              </li>
            </ul>
          </div>
          <a
            href="https://cal.com/herbievine/30min"
            class="w-fit px-4 py-2 bg-slate-800 hover:bg-slate-900 transition-colors duration-200 text-white font-semibold"
          >
            {t('pricing.cta.book')}
          </a>
        </div>
      </div>
      <p class="text-slate-600 text-center font-medium max-w-lg md:max-w-xl">
        {t('pricing.cta.unsure')}
        <a
          href="https://cal.com/herbievine/30min"
          class="text-slate-800 hover:text-slate-900 transition-colors duration-200 font-semibold underline"
          >{t('pricing.cta.reach')}</a
        >
        {t('pricing.cta.findout')}
      </p>
    </section>
  </div>
  <Footer />
</Base>
